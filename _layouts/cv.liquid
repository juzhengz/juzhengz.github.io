---
layout: default
---
<!-- _layouts/cv.html -->
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          {% if page.cv_pdf contains '://' %}
            href="{{ page.cv_pdf }}"
          {% else %}
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
          {% endif %}
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
        >
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    {% if page.cv_pdf %}
      <div class="pdf-container" style="position: relative; width: 100%; padding-top: 141.42%; max-width: 100%; overflow: hidden;">
        <iframe
          src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}#pagemode=none"
          style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none;"
          frameborder="0"
        >
          <p>
            Your browser does not support PDFs. Please download the PDF to view it:
            <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}">Download PDF</a>.
          </p>
        </iframe>
      </div>
    {% else %}
      <p>No CV PDF is available at the moment.</p>
    {% endif %}
  </article>
</div>
